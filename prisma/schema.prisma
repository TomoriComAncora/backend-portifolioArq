generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String  @id @default(uuid())
  nome     String?
  email    String  @unique
  senha    String?
  googleId String? @unique

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Projeto   Projeto[]

  @@map("usuarios")
}

model Projeto {
  id         String  @id  @default(uuid())
  titulo     String
  descricao  String?
  data       DateTime?
  categoria  String?
  imagemCapa String
  usuarioId  String
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  ImagemProjeto ImagemProjeto[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projetos")
}

model ImagemProjeto{
  id String @id @default(uuid())
  url String
  legenda String?
  projetoId String
  projeto Projeto @relation(fields: [projetoId], references: [id])

  createdAt DateTime @default(now())

  @@map("imagens")
}